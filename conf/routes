# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index
# Add Device Types
POST    /device_types                   controllers.Application.addDeviceType
# Add Devices
POST    /devices                        controllers.Application.addDevice
# Get devices
GET     /devices                        controllers.Application.getDevices
# Add a reading
POST    /devices/:device_uuid/readings  controllers.Application.addReading( device_uuid: String )
# Get Device Readings
GET     /devices/:device_uuid/readings  controllers.Application.getReadings( device_uuid: String )

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
